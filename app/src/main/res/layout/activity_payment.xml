<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/paymentTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/payment_title"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/paymentPriceValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/price_value_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentTitleTextView" />

    <TextView
        android:id="@+id/paymentPriceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="R$ 421,90"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/paymentPriceValueLabel"
        app:layout_constraintTop_toBottomOf="@+id/paymentPriceValueLabel" />

    <EditText
        android:id="@+id/creditCardNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="@string/credit_card_number_hint"
        android:inputType="number"
        android:maxLength="12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentPriceValue" />

    <EditText
        android:id="@+id/creditCardMonthExpires"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:hint="@string/credit_card_month_expires_hint"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/creditCardCVC"
        app:layout_constraintStart_toStartOf="@+id/creditCardNumber" />

    <EditText
        android:id="@+id/creditCardYearExpires"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/credit_card_year_expires_hint"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/creditCardCVC"
        app:layout_constraintStart_toEndOf="@+id/creditCardMonthExpires" />

    <EditText
        android:id="@+id/creditCardCVC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/credit_card_cvc_hint"
        android:inputType="number"
        android:maxLength="3"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_cvc_cartao_de_credito"
        app:layout_constraintEnd_toEndOf="@+id/creditCardNumber"
        app:layout_constraintTop_toBottomOf="@+id/creditCardNumber" />

    <EditText
        android:id="@+id/creditCardHolderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/credit_card_holder_name_hint"
        android:digits="@string/credit_card_holder_name_mask"
        android:inputType="textCapCharacters"
        app:layout_constraintEnd_toEndOf="@+id/creditCardCVC"
        app:layout_constraintStart_toStartOf="@+id/creditCardMonthExpires"
        app:layout_constraintTop_toBottomOf="@+id/creditCardCVC" />

    <Button
        android:id="@+id/payment_make_payment_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/payment_make_payment_button"
        android:textColor="@android:color/white"
        android:background="@drawable/orange_rounded_button"
        app:layout_constraintEnd_toEndOf="@id/creditCardHolderName"
        app:layout_constraintStart_toStartOf="@id/creditCardHolderName"
        app:layout_constraintTop_toBottomOf="@id/creditCardHolderName" />


</androidx.constraintlayout.widget.ConstraintLayout>